{
	"title": "Rails",
	"description": "nginx passenger example",
	"configuration": {
		"user": "www",
		"port": "8889",
		"servername": "ruby.^^domain_name^^",
		"ServerAdmin": "ruby Admin",
		"user_home": "/var/www/",
		"code_destination": "/var/www/^^identifer^^" 
	},
	"os_packages": {
		"adds": [		
			"nginx",
			"libnginx-mod-http-passenger"
		]
	},
	"bindings": [
		{
			"type": "embed",
			"descriptor": {
				"repository": "https://github.com/v2Blueprints/enginesd_debian_base"
			},
			"variables": {
		        "locale": "^^locale^^",
		        "charset": "^^charset^^"
			}
		},
		{
			"type": "embed",
			"descriptor": {
				"repository": "https://github.com/v2Blueprints/ruby_rbenv"
			},
			"variables": {
				"user": "^^user^^"
			}
		}
	],
	"containers": [
		{
			"type": "lxd"
		}
	]
}
